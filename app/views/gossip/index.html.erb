<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Bievenue sur le Gossip Project !</h1>
    
      <p>Que s'est-il passé aujourd'hui ? </p>
      <p><a class="btn btn-primary btn-lg" href="/gossip/new" role="button">Créer un potin &raquo;</a></p>
  </div>
</div>


<h4> Voici la liste des potins </h4>

<div class="row">
  <% @gossips.each do |gossip| %>
    <div class="col-sm-4" style="padding: 30px">
      <div class="card">
        <div class="card-header">
          <h4><%= gossip.title %></h4>
        </div>
        <div class="card-body">
          <h5 class="card-title">A été écrit par <%= gossip.user.first_name %></h5>
          <%= link_to "En savoir plus...", gossip_path(gossip.id), class:"btn btn-primary" %>
          
          <% if gossip.likes.where(user_id: current_user).count > 0 %>
            <%= link_to "Dislike", like_path(:id => gossip.likes.sample), method: :delete, class:"btn btn-danger" %>
          <% else %>
            <%= link_to "liker", like_index_path(:id => gossip.id), method: :post, class:"btn btn-danger" %>
          <% end %>
          <%= gossip.likes.count %>

        </div>
      </div>
    </div>
  <% end %>
</div>
