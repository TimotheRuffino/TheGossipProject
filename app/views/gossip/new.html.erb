<% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<div class="card container text-center mt-5 border border-success">
  <div class="card-header" style="background-color: #FFFFFF">
    <h2>Création d'un potin</h2>
  </div>
  <div class="container text-center mt-2" style="text-align:center"> <br/>
      <%= form_tag url_for(action: 'create'), method: "post" do %>

       
       <div class="form-group">
        <%= text_field_tag 'title', @gossip.title, class: 'form-control', placeholder: 'Titre' %>
      </div>



        <div class="form-group">
       <%= text_area_tag 'content', @gossip.content, class: 'form-control', placeholder: 'Contenu' %>
      </div>

      <br>


       <div class="btn-group mr-2" role="group">
              <%= submit_tag "Créer ton potin !", class: "btn btn-primary mx-1" %> 
            </div>
            <br/>
            <br>
          </div>
        <% end %>
      </div>
    </div>

     
