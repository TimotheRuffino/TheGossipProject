<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer votre utilisateur pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="card container text-center mt-5 border border-success">
  <div class="card-header" style="background-color: #FFFFFF">
    <h2>Inscription</h2>
  </div>
  <div class="container text-center mt-2" style="text-align:center">
    
      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <div class="form-group">
        <%= text_field_tag 'name', @user.last_name, class: 'form-control', placeholder: 'Nom' %>
      </div>

      <div class="form-group">
        <%= text_field_tag 'first_name', @user.first_name, class: 'form-control', placeholder: 'Prénom' %>
      </div>

      <div class="form-group">
        <%= text_field_tag 'description', @user.description, class: 'form-control', placeholder: 'Description' %>
      </div>

      <div class="form-group">
        <%= text_field_tag 'email', @user.email, class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="form-group">
        <%= text_field_tag 'age', @user.age, class: 'form-control', placeholder: 'Age' %>
      </div>

      <div class="form-group">
        <%= password_field_tag 'pass_first', @user.password_digest, class: 'form-control', placeholder: ' Entre ton mot de passe' %>
      </div>
      
      <div class="form-group">
        <%= password_field_tag 'pass_second', @user.password_digest, class: 'form-control', placeholder: 'Confirme ton mot de passe' %>
      </div>

      <div class="btn-group mr-2" role="group">
              <%= submit_tag "Créer ton profil", class: "btn btn-primary mx-1" %> 
            </div>



        </div>
      <% end %>
 
  </div>
</div>
